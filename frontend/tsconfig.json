{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "composite": false,
    "baseUrl": "./",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@components/*": ["./src/components/*"],
      "@Context/*": ["./src/Context/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@locales/*": ["./src/locales/*"],
      "@pages/*": ["./src/pages/*"],
      "@tests/*": ["./src/tests/*"],
      "@app-types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@test/*": ["./src/test/*"],
      "@ui/*": ["../ui/src/*"]
    },

    "types": ["vite/client", "node", "vitest", "vitest/globals"]
  },
  "include": [
    "src",
    "src/types",
    "src/pages",
    "src/helpers",
    "eslint.config.mjs",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "exclude": ["node_modules", "vite.config.ts"]
}
